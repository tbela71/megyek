@page
@model Megyek.Pages.Event.DeleteModel

@{
    ViewData["Title"] = "Delete event";
}

<h2>Delete</h2>
@if (Model.Event != null)
{
    <b>Team : </b>@Html.DisplayFor(model => Model.Event.Team.Name)

    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Event</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Event.Date)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Event.DisplayDate)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Event.Description)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Event.Description)
            </dd>
        </dl>

        <form method="post">
            <input type="hidden" asp-for="Event.Id" />
            <input type="submit" value="Delete" class="btn btn-default" />
        </form>
    </div>
    <div>
        <a asp-page="EventIndex" asp-route-teamId="@Model.Event.Team.Id">Back to List</a>
    </div>
}
else
{
    <b>No permission to this team!</b>
}

